---
import { getCollection } from 'astro:content'
import Base from '@layouts/Base.astro'

const data = await getCollection('github')
data.sort((a, b) => b.data.stargazers_count - a.data.stargazers_count)
---

<Base>
<div class="grid grid-cols-2 gap-4">
  {data.map(x => ( 
    <div class="relative bg-neutral text-base-content shadow-md" >
      <a href={x.data.html_url} target="_blank" class="inline-block h-full">
        <svg width="80" height="80" viewBox="0 0 250 250" style="fill: black ; position: absolute; top: 0; border: 0; right: -1px;" aria-hidden="true" class="text-neutral" > <path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path> <path d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2" fill="currentColor" style="transform-origin: 130px 106px;" class="octo-arm"></path> <path d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z" fill="currentColor" class="octo-body"></path> </svg>

        <div class="flex h-full grow flex-col p-6">
          <h1 class="mb-2 overflow-hidden text-2xl font-bold"> {x.data.name} </h1>
          <div class="mb-8 flex grow">
            {x.data.description}
          </div>
          <div class="flex items-center space-x-4">
            <div class="flex items-center">
              <svg
                class="w-5 h-5 text-yellow-500"
                xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path fill="currentColor" d="m8.85 16.825l3.15-1.9l3.15 1.925l-.825-3.6l2.775-2.4l-3.65-.325l-1.45-3.4l-1.45 3.375l-3.65.325l2.775 2.425zM5.825 21l1.625-7.025L2 9.25l7.2-.625L12 2l2.8 6.625l7.2.625l-5.45 4.725L18.175 21L12 17.275zM12 12.25" />
              </svg>
              <span>{x.data.stargazers_count}</span>
              <!-- Star Count -->
            </div>
            <div class="flex items-center ">
              <svg
                class="mr-1 h-5 w-5 text-blue-500"
                xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                <path fill="currentColor" fill-rule="evenodd" d="m.879 10.879l.182.182l.878.878a1.5 1.5 0 0 1 2.121 2.122l.88.878l.181.182L6 16l1.06-1.06l7.88-7.88L16 6l-.879-.879l-.182-.182l-.878-.878a1.5 1.5 0 0 1-2.122-2.121l-.878-.88l-.182-.181L10 0L8.94 1.06L1.06 8.94L0 10zM3 10q-.403.002-.777.102L2.121 10l4.41-4.409l3.878 3.879L6 13.879l-.102-.102A3 3 0 0 0 3 10m8.47-1.591L13.879 6l-.102-.102a3 3 0 0 1-3.675-3.675L10 2.121l-2.409 2.41z" clip-rule="evenodd" />
              </svg>
              <span>{x.data.forks_count}</span>
              <!-- Fork Count -->
            </div>
            <div class="flex items-center">
              <svg
                class="h-5 w-5"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                >
                <path
                d="M2 10a8 8 0 1116 0 8 8 0 01-16 0zm8-3a1 1 0 10-2 0v3a1 1 0 001 1h3a1 1 0 100-2h-2V7z"
                ></path>
              </svg>
                <span class="ml-1">{new Date( x.data.updated_at ).toLocaleDateString()}</span>
            </div>
            <div class="flex items-center">
              <svg
                class="h-5 w-5 "
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                >
                <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm-3-7h6a1 1 0 110 2H7a1 1 0 010-2zm0-4h6a1 1 0 110 2H7a1 1 0 010-2z"
                clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1">{x.data.open_issues}</span>
            </div>
          </div>
        </div>
      </a>
    </div>
    ))}
  </div>
</Base>
